{
  "name": "@thefarce/commando",
  "version": "0.1.0",
  "description": "Command line processing that's intuitive.",
  "type": "module",
  "main": "./src/index.js",
  "scripts": {
    "docs": "npx jsdoc --package ./package.json -c ./config/jsdoc.config.json -R README.md -t ./node_modules/ink-docstrap/template ./src",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --config=./config/jest.test.config.json ./test",
    "test:coverage": "jest --coverage --config=./config/jest.test.config.json ./test && rm -rf ./reports/test-coverage && mv ./coverage ./reports/test-coverage",
    "test:spec": "cross-env NODE_ENV=test jest --testTimeout=10000 --config=./config/jest.spec.config.json ./spec",
    "style": "npx eslint src -f ./node_modules/eslint-html-reporter/reporter.js -o ./reports/style/index.html",
    "style:fix": "npx eslint src -f ./node_modules/eslint-html-reporter/reporter.js -o ./reports/style/index.html --fix"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.com:thefarce/farce-commando.git"
  },
  "keywords": [
    "cli",
    "command-line",
    "command"
  ],
  "author": "Sir Robert Burbridge",
  "license": "SEE LICENSE IN LICENSE.txt",
  "devDependencies": {
    "@babel/preset-env": "^7.10.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-html-reporter": "^0.7.4",
    "eslint-plugin-import": "^2.22.0",
    "ink-docstrap": "^1.3.2",
    "jest": "^26.0.1",
    "jest-html-reporter": "^3.1.3",
    "jsdoc": "^3.6.4",
    "lehre": "^1.3.1"
  }
}
