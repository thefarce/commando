{
  "name": "@thefarce/commando",
  "version": "0.1.0",
  "description": "Command line processing that's intuitive.",
  "type": "module",
  "main": "./src/index.js",
  "scripts": {
    "docs": "npx jsdoc --package ./package.json -c ./jsdoc.config.json -R README.md -t ./node_modules/ink-docstrap/template ./src",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 ./test",
    "test:coverage": "jest --coverage ./test",
    "test:spec": "cross-env NODE_ENV=test jest --testTimeout=10000 --config=./spec/jest.config.json ./spec"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.com:thefarce/farce-commando.git"
  },
  "keywords": [
    "cli",
    "command-line",
    "command"
  ],
  "author": "Sir Robert Burbridge",
  "license": "SEE LICENSE IN LICENSE.txt",
  "devDependencies": {
    "@babel/preset-env": "^7.10.3",
    "cross-env": "^7.0.2",
    "jest": "^26.0.1",
    "jest-html-reporter": "^3.1.3",
    "jsdoc": "^3.6.4",
    "lehre": "^1.3.1"
  }
}
